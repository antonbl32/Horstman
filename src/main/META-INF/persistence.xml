<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="ru.easyjava.data.jpa.hibernate">
        <properties>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.connection.url" value="jdbc:postgresql://127.0.0.1:5432/mytest"/>
            <property name="hibernate.connection.username" value="mytest"/>
            <property name="hibernate.connection.password" value="mytest"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.c3p0.min_size" value="5"/>
        </properties>
    </persistence-unit>
</persistence>